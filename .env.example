SRV_ADDR=:8080
SRV_ENV=dev

JWT_SECRET=super-secret

# Packing service (py3dbp Flask microservice)
PACKING_SERVICE_URL=http://localhost:5051
PACKING_HOST=0.0.0.0
PACKING_PORT=5051
PACKING_DEBUG=0

# Gunicorn configuration for packing service
GUNICORN_WORKERS=2
GUNICORN_THREADS=4
GUNICORN_TIMEOUT=60
GUNICORN_WORKER_CLASS=gthread

# Bootstrap founder user (preferred)
FOUNDER_USERNAME=admin
FOUNDER_EMAIL=admin@example.com
FOUNDER_PASSWORD=admin123

# Legacy fallback (deprecated)
ADMIN_USERNAME=admin
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=admin123

# PostgreSQL
POSTGRES_DB=stuffing
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

DATABASE_URL=postgres://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}?sslmode=disable

# Ports for docker-compose
POSTGRES_EXPOSE_PORT=5432
PACKING_EXPOSE_PORT=5051
API_EXPOSE_PORT=8080
WEB_EXPOSE_PORT=3000

# optional for goose migrations
GOOSE_DRIVER=postgres
GOOSE_DBSTRING=${DATABASE_URL}
GOOSE_MIGRATION_DIR=cmd/db/migrations
